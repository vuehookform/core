{
  "name": "@vuehookform/core",
  "version": "0.5.0",
  "description": "TypeScript-first form library for Vue 3, inspired by React Hook Form. Form-level state management with Zod validation.",
  "type": "module",
  "workspaces": [
    "e2e"
  ],
  "main": "./dist/vuehookform.cjs",
  "module": "./dist/vuehookform.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vuehookform.js",
      "require": "./dist/vuehookform.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "build:lib": "vite build --config vite.config.lib.ts",
    "build": "run-p type-check build:lib",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix --cache",
    "lint": "run-s lint:*",
    "format": "prettier --write --experimental-cli lib/ docs/",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "e2e:dev": "npm run -w e2e dev",
    "test:e2e": "npm run build:lib && npm run -w e2e test:e2e:ci",
    "test:e2e:open": "npm run build:lib && npm run -w e2e test:e2e:open",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuehookform/core.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "form",
    "forms",
    "validation",
    "zod",
    "typescript",
    "hook",
    "react-hook-form"
  ],
  "author": "jonnasson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuehookform/core/issues"
  },
  "homepage": "https://vuehookform.com",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "zod": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.5",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
    "eslint-plugin-oxlint": "~1.29.0",
    "eslint-plugin-vue": "~10.5.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "oxc-minify": "^0.105.0",
    "oxlint": "~1.29.0",
    "prettier": "3.6.2",
    "typescript": "~5.9.0",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^2.0.0-alpha.15",
    "vitest": "^4.0.16",
    "vue": "^3.5.25",
    "vue-tsc": "^3.1.5",
    "zod": "^4.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "oxlint --fix -D correctness",
      "eslint --fix"
    ],
    "*.{ts,tsx,vue,json,md}": [
      "prettier --write --experimental-cli"
    ]
  }
}
