{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/lib/**/*"],
  "exclude": ["src/lib/**/__tests__/*"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src/lib",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
